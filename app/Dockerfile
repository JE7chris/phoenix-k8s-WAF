FROM python:3.9-slim

WORKDIR /app

# 1. æ›¿æ¢é˜¿é‡Œæº (ä¿æŒä¹‹å‰çš„ä¼˜åŒ–)
RUN sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list.d/debian.sources 2>/dev/null || sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list

# 2. ğŸ”¥ æ ¸å¿ƒä¿®å¤ï¼šå®‰è£… libpcap å’Œ tcpdump
# supervisor: è¿›ç¨‹ç®¡ç†
# libpcap-dev: Scapy ç¼–è¯‘è¿‡æ»¤å™¨å¿…éœ€
# tcpdump: åŒ…å«å¾ˆå¤šæŠ“åŒ…åŸºç¡€åº“ï¼Œé˜²ä¸‡ä¸€
